@model Vidly.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (@Html.BeginForm("Create", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Custmore.Name)
        @Html.TextBoxFor(m => m.Custmore.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Custmore.Birthdate)
        @Html.TextBoxFor(m => m.Custmore.Birthdate, new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Custmore.IsSubscribedToNewsLetter)Subscribed To Newsletter ?
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MembershipTypes)
        @Html.DropDownListFor(m => m.MembershipTypes, new SelectList(Model.MembershipTypes,"Id","Name"),
            "Select Membership Type",new { @class="form-control" })
    </div>

}