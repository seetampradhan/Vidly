@model Vidly.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (@Html.BeginForm("Save", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Custmore.Name)
        @Html.TextBoxFor(m => m.Custmore.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Custmore.Birthdate)
        @Html.TextBoxFor(m => m.Custmore.Birthdate,"{0:d MMM yyyy}", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Custmore.MembershipTypeId)
        @Html.DropDownListFor(m => m.Custmore.MembershipTypeId, new SelectList(Model.MembershipTypes,"Id","Name"),
            "Select Membership Type",new { @class="form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Custmore.IsSubscribedToNewsLetter)Subscribed To Newsletter ?
        </label>
    </div>
    @Html.HiddenFor(c => c.Custmore.Id)
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

}