@model Vidly.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>

@using (@Html.BeginForm("Save", "Movie"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres,"Id", "GenreType")
            ,"Select Genre", new {@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.MovieStock)
        @Html.TextBoxFor(m => m.Movie.MovieStock,new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Movie.Id)
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

}

